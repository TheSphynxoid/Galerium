{% extends 'base.html.twig' %}

{% block title %}Offre index{% endblock %}

{% block body %}
    <article class="mx-auto my-4" style="max-width:860px;">
        <header class="mb-4 text-center">
            <h2 style="font-family: Georgia, 'Times New Roman', serif;">Offres</h2>
            <p class="text-muted small">Liste des offres r√©centes</p>
        </header>

        <div class="bg-white rounded shadow-sm p-3">
            <div class="d-flex justify-content-end mb-3">
                <a class="btn btn-outline-dark btn-sm" href="{{ path('app_offre_new') }}">Create new</a>
            </div>
            <table class="table table-sm mb-0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Montant</th>
                <th>DateOffre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offre in offres %}
            <tr>
                <td>{{ offre.id }}</td>
                <td>{{ offre.montant }}</td>
                <td>{{ offre.dateOffre ? offre.dateOffre|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_offre_show', {'id': offre.id}) }}">Show</a>
                    <a class="btn btn-sm btn-outline-primary" href="{{ path('app_offre_edit', {'id': offre.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
    </article>
{% endblock %}
