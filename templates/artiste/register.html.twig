{% extends 'artiste/base.html.twig' %}

{% block title %}Inscription Artiste - Galerium{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h2 class="mb-0">Inscription Artiste</h2>
            </div>
            <div class="card-body">
                {{ form_start(registrationForm, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.nom) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.prenom) }}
                        </div>
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.specialite) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.biographie) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.siteWeb) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.reseauxSociaux) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.photoProfilFile) }}
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">S'inscrire</button>
                    </div>
                {{ form_end(registrationForm) }}
                <div class="mt-3 text-center">
                    <p>Déjà inscrit ? <a href="{{ path('app_artiste_login') }}">Connectez-vous</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}







