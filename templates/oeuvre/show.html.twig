{% extends 'artiste/base.html.twig' %}

{% block title %}{{ oeuvre.titre }} - Galerium{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8">
        <div class="card">
            {% if oeuvre.image %}
                <img src="{{ asset(oeuvre.image) }}" class="card-img-top" alt="{{ oeuvre.titre }}">
            {% endif %}
            <div class="card-body">
                <h1 class="card-title">{{ oeuvre.titre }}</h1>
                <p class="text-muted">
                    <strong>Catégorie:</strong> {{ oeuvre.categorie ?? 'Non spécifiée' }}<br>
                    <strong>Date de création:</strong> {{ oeuvre.dateCreation ? oeuvre.dateCreation|date('d/m/Y') : 'Non spécifiée' }}<br>
                    <strong>Statut:</strong> 
                    {% if oeuvre.statut == 'publiee' %}
                        <span class="badge bg-success">Publiée</span>
                    {% else %}
                        <span class="badge bg-warning">En attente</span>
                    {% endif %}
                </p>
                <hr>
                <h5>Description</h5>
                <p>{{ oeuvre.description ?? 'Aucune description' }}</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Statistiques</h5>
            </div>
            <div class="card-body">
                <p><strong>Nombre de votes:</strong> {{ oeuvre.nbVotes }}</p>
                <p><strong>Nombre de commentaires:</strong> {{ oeuvre.nbCommentaires }}</p>
            </div>
        </div>
        <div class="card mt-3">
            <div class="card-body">
                <a href="{{ path('app_oeuvre_edit', {'id': oeuvre.id}) }}" class="btn btn-primary w-100 mb-2">
                    <i class="bi bi-pencil"></i> Modifier
                </a>
                <form method="post" action="{{ path('app_oeuvre_delete', {'id': oeuvre.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette œuvre ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ oeuvre.id) }}">
                    <button type="submit" class="btn btn-danger w-100">
                        <i class="bi bi-trash"></i> Supprimer
                    </button>
                </form>
                <a href="{{ path('app_oeuvre_index') }}" class="btn btn-secondary w-100 mt-2">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}







