{% extends 'admin/base.html.twig' %}

{% block page_title %}Détails de l'Artiste: {{ artiste.getFullName }}{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-md-12">
        <a href="{{ path('admin_artistes_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
        <a href="{{ path('admin_artistes_edit', {id: artiste.id}) }}" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Modifier
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                {% if artiste.photoProfil %}
                    <img src="{{ asset(artiste.photoProfil) }}" alt="Photo de profil" class="img-fluid rounded mb-3" style="max-height: 300px;">
                {% else %}
                    <div class="bg-secondary text-white rounded d-flex align-items-center justify-content-center mb-3" style="height: 300px;">
                        <i class="bi bi-person-circle" style="font-size: 5rem;"></i>
                    </div>
                {% endif %}
                <h4>{{ artiste.getFullName }}</h4>
                <p class="text-muted">{{ artiste.email }}</p>
                <p>
                    {% if artiste.isActive %}
                        <span class="badge bg-success">Compte actif</span>
                    {% else %}
                        <span class="badge bg-danger">Compte désactivé</span>
                    {% endif %}
                </p>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5>Actions</h5>
            </div>
            <div class="card-body">
                {% if artiste.isActive %}
                    <form method="POST" action="{{ path('admin_artistes_deactivate', {id: artiste.id}) }}" class="mb-2">
                        <input type="hidden" name="_token" value="{{ csrf_token('deactivate_artiste' ~ artiste.id) }}">
                        <button type="submit" class="btn btn-warning btn-sm w-100">
                            <i class="bi bi-x-circle"></i> Désactiver le compte
                        </button>
                    </form>
                {% else %}
                    <form method="POST" action="{{ path('admin_artistes_activate', {id: artiste.id}) }}" class="mb-2">
                        <input type="hidden" name="_token" value="{{ csrf_token('activate_artiste' ~ artiste.id) }}">
                        <button type="submit" class="btn btn-success btn-sm w-100">
                            <i class="bi bi-check-circle"></i> Activer le compte
                        </button>
                    </form>
                {% endif %}

                <form method="POST" action="{{ path('admin_artistes_change_role', {id: artiste.id}) }}" class="mb-2">
                    <input type="hidden" name="_token" value="{{ csrf_token('change_role' ~ artiste.id) }}">
                    <select name="role" class="form-select form-select-sm mb-2" onchange="this.form.submit()">
                        <option value="ROLE_ARTISTE" {% if 'ROLE_ARTISTE' in artiste.roles %}selected{% endif %}>Artiste</option>
                        <option value="ROLE_USER" {% if 'ROLE_USER' in artiste.roles %}selected{% endif %}>Utilisateur</option>
                        <option value="ROLE_ADMIN" {% if 'ROLE_ADMIN' in artiste.roles %}selected{% endif %}>Administrateur</option>
                    </select>
                </form>

                <form method="POST" action="{{ path('admin_artistes_delete', {id: artiste.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete_artiste' ~ artiste.id) }}">
                    <button type="submit" class="btn btn-danger btn-sm w-100" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet artiste et toutes ses données ?')">
                        <i class="bi bi-trash"></i> Supprimer définitivement
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-header">
                <h5>Informations personnelles</h5>
            </div>
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th>Nom:</th>
                        <td>{{ artiste.nom }}</td>
                    </tr>
                    <tr>
                        <th>Prénom:</th>
                        <td>{{ artiste.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Email:</th>
                        <td>{{ artiste.email }}</td>
                    </tr>
                    <tr>
                        <th>Spécialité:</th>
                        <td>{{ artiste.specialite ?? '-' }}</td>
                    </tr>
                    <tr>
                        <th>Biographie:</th>
                        <td>{{ artiste.biographie ?? '-' }}</td>
                    </tr>
                    <tr>
                        <th>Site web:</th>
                        <td>{{ artiste.siteWeb ? '<a href="' ~ artiste.siteWeb ~ '" target="_blank">' ~ artiste.siteWeb ~ '</a>' : '-'|raw }}</td>
                    </tr>
                    <tr>
                        <th>Réseaux sociaux:</th>
                        <td>{{ artiste.reseauxSociaux ? '<a href="' ~ artiste.reseauxSociaux ~ '" target="_blank">' ~ artiste.reseauxSociaux ~ '</a>' : '-'|raw }}</td>
                    </tr>
                    <tr>
                        <th>Date d'inscription:</th>
                        <td>{{ artiste.createdAt|date('d/m/Y H:i') }}</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                <h5>Statistiques</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="border rounded p-3">
                            <h3>{{ artiste.oeuvres|length }}</h3>
                            <p class="text-muted mb-0">Œuvres</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border rounded p-3">
                            <h3>{{ totalParticipations }}</h3>
                            <p class="text-muted mb-0">Participations</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border rounded p-3">
                            <h3>{{ totalVotes }}</h3>
                            <p class="text-muted mb-0">Votes reçus</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border rounded p-3">
                            <h3>{{ totalCommentaires }}</h3>
                            <p class="text-muted mb-0">Commentaires</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5>Œuvres ({{ artiste.oeuvres|length }})</h5>
            </div>
            <div class="card-body">
                {% if artiste.oeuvres|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Statut</th>
                                    <th>Votes</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for oeuvre in oeuvres %}
                                <tr>
                                    <td>{{ oeuvre.titre }}</td>
                                    <td>
                                        <span class="badge bg-{{ oeuvre.statut == 'publiee' ? 'success' : (oeuvre.statut == 'refusee' ? 'danger' : 'warning') }}">
                                            {{ oeuvre.statut }}
                                        </span>
                                    </td>
                                    <td>{{ oeuvre.nbVotes }}</td>
                                    <td>{{ oeuvre.createdAt|date('d/m/Y') }}</td>
                                    <td>
                                        <a href="{{ path('admin_oeuvres_show', {id: oeuvre.id}) }}" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted">Aucune œuvre pour cet artiste.</p>
                {% endif %}
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5>Participations aux concours ({{ participations|length }})</h5>
            </div>
            <div class="card-body">
                {% if participations|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Concours</th>
                                    <th>Œuvre</th>
                                    <th>Votes publics</th>
                                    <th>Note jury</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for participation in participations %}
                                <tr>
                                    <td>{{ participation.concours.titre }}</td>
                                    <td>{{ participation.oeuvre ? participation.oeuvre.titre : '-' }}</td>
                                    <td>{{ participation.votesPublic }}</td>
                                    <td>{{ participation.noteJury ?? '-' }}</td>
                                    <td>{{ participation.createdAt|date('d/m/Y') }}</td>
                                    <td>
                                        <a href="{{ path('admin_participations_show', {id: participation.id}) }}" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted">Aucune participation pour cet artiste.</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}



