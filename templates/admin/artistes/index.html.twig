{% extends 'admin/base.html.twig' %}

{% block page_title %}Gestion des Artistes{% endblock %}

{% block body %}
<div class="d-flex justify-content-between mb-4">
    <h2>Liste des Artistes</h2>
    <a href="{{ path('admin_artistes_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Créer un compte artiste
    </a>
</div>

<form method="GET" class="mb-4">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Rechercher par nom, prénom ou email..." value="{{ search }}">
        <button class="btn btn-outline-secondary" type="submit">
            <i class="bi bi-search"></i> Rechercher
        </button>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Spécialité</th>
                <th>Statut</th>
                <th>Date d'inscription</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for artiste in artistes %}
            <tr>
                <td>{{ artiste.id }}</td>
                <td>{{ artiste.nom }}</td>
                <td>{{ artiste.prenom }}</td>
                <td>{{ artiste.email }}</td>
                <td>{{ artiste.specialite ?? '-' }}</td>
                <td>
                    {% if artiste.isActive %}
                        <span class="badge bg-success">Actif</span>
                    {% else %}
                        <span class="badge bg-danger">Désactivé</span>
                    {% endif %}
                </td>
                <td>{{ artiste.createdAt|date('d/m/Y') }}</td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="{{ path('admin_artistes_show', {id: artiste.id}) }}" class="btn btn-sm btn-info">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a href="{{ path('admin_artistes_edit', {id: artiste.id}) }}" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil"></i>
                        </a>
                        {% if artiste.isActive %}
                            <form method="POST" action="{{ path('admin_artistes_deactivate', {id: artiste.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('deactivate_artiste' ~ artiste.id) }}">
                                <button type="submit" class="btn btn-sm btn-secondary" onclick="return confirm('Êtes-vous sûr de vouloir désactiver cet artiste ?')">
                                    <i class="bi bi-x-circle"></i>
                                </button>
                            </form>
                        {% else %}
                            <form method="POST" action="{{ path('admin_artistes_activate', {id: artiste.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('activate_artiste' ~ artiste.id) }}">
                                <button type="submit" class="btn btn-sm btn-success">
                                    <i class="bi bi-check-circle"></i>
                                </button>
                            </form>
                        {% endif %}
                        <form method="POST" action="{{ path('admin_artistes_delete', {id: artiste.id}) }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_artiste' ~ artiste.id) }}">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet artiste et toutes ses données ?')">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="8" class="text-center">Aucun artiste trouvé</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}



