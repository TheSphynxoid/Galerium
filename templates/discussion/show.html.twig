{% extends 'base.html.twig' %}

{% block title %}Discussion{% endblock %}

{% block body %}
    <h1>Discussion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ discussion.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ discussion.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ discussion.contenu }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ discussion.dateCreation ? discussion.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ discussion.statut }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_discussion_index') }}">back to list</a>

    <a href="{{ path('app_discussion_edit', {'id': discussion.id}) }}">edit</a>

    {{ include('discussion/_delete_form.html.twig') }}
{% endblock %}
