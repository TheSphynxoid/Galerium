{% extends 'backoffice.html.twig' %}

{% block title %}Enchere{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0">Ench√®re #{{ enchere.id }}</h3>
        </div>
        <div class="card-body">
            <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ enchere.id }}</td>
            </tr>
            <tr>
                <th>PrixDeBase</th>
                <td>{{ enchere.prixDeBase }}</td>
            </tr>
            <tr>
                <th>PrixActuel</th>
                <td>{{ enchere.prixActuel }}</td>
            </tr>
