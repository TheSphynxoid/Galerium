            <tr>
                <th>Statut</th>
                <td>{{ enchere.Statut.value }}</td>
            </tr>
        </tbody>
            </table>
            <div class="mt-3">
                <a class="btn btn-secondary" href="{{ path('app_enchere_index') }}">Back to list</a>
                <a class="btn btn-primary" href="{{ path('app_enchere_edit', {'id': enchere.id}) }}">Edit</a>
                <span class="ml-2">{{ include('enchere/_delete_form.html.twig') }}</span>
            </div>
        </div>
