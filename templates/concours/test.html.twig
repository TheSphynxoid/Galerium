{% extends 'backoffice.html.twig' %}

{% block title %}Gestion des Concours - Galerium{% endblock %}

{% block breadcrumb %}
<li class="breadcrumb-item"><a href="#">Home</a></li>
<li class="breadcrumb-item active"><span>Concours</span></li>
{% endblock %}

{% block body %}
<div class="body flex-grow-1">
    <div class="container-lg px-4">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <svg class="icon me-2">
                    <use xlink:href="{{ asset('vendors/@coreui/icons/svg/free.svg') }}#cil-check-circle"></use>
                </svg>
                {{ message }}
                <button type="button" class="btn-close" data-coreui-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <svg class="icon me-2">
                    <use xlink:href="{{ asset('vendors/@coreui/icons/svg/free.svg') }}#cil-warning"></use>
                </svg>
                {{ message }}
                <button type="button" class="btn-close" data-coreui-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0">Gestion des Concours</h1>
            <a href="{{ path('app_concours_creer') }}" class="btn btn-primary">
                <svg class="icon me-2">
                    <use xlink:href="{{ asset('vendors/@coreui/icons/svg/free.svg') }}#cil-plus"></use>
                </svg>
                Créer un concours
            </a>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <strong>Liste des concours ({{ concours|length }})</strong>
            </div>
            <div class="card-body">
                {% if concours|length > 0 %}
                    <div class="table-responsive">
                        <table class="table border mb-0">
                            <thead class="fw-semibold text-nowrap">
                                <tr class="align-middle">
                                    <th class="bg-body-secondary">ID</th>
                                    <th class="bg-body-secondary">Titre</th>
                                    <th class="bg-body-secondary text-center">Statut</th>
                                    <th class="bg-body-secondary">Date Début</th>
                                    <th class="bg-body-secondary">Date Fin</th>
                                    <th class="bg-body-secondary text-center">Vote Public</th>
                                    <th class="bg-body-secondary text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for c in concours %}
                                    <tr class="align-middle">
                                        <td>{{ c.id }}</td>
                                        <td>
                                            <div class="fw-semibold">{{ c.titre }}</div>
                                            {% if c.description %}
                                                <div class="small text-body-secondary text-truncate" style="max-width: 300px;">{{ c.description }}</div>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            {% if c.statut == 'actif' %}
                                                <span class="badge bg-success">{{ c.statut }}</span>
                                            {% elseif c.statut == 'clôturé' %}
                                                <span class="badge bg-danger">{{ c.statut }}</span>
                                            {% else %}
                                                <span class="badge bg-secondary">{{ c.statut }}</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="text-nowrap">{{ c.dateDebut ? c.dateDebut|date('d/m/Y H:i') : '-' }}</div>
                                        </td>
                                        <td>
                                            <div class="text-nowrap">{{ c.dateFin ? c.dateFin|date('d/m/Y H:i') : '-' }}</div>
                                        </td>
                                        <td class="text-center">
                                            {% if c.votePublic %}
                                                <span class="badge bg-success">Oui</span>
                                                {% if c.dateDebutVote %}
                                                    <div class="small text-body-secondary mt-1">
                                                        Du {{ c.dateDebutVote|date('d/m/Y') }}<br>
                                                        au {{ c.dateFinVote|date('d/m/Y') }}
                                                    </div>
                                                {% endif %}
                                            {% else %}
                                                <span class="badge bg-secondary">Non</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('app_concours_voir', {id: c.id}) }}" class="btn btn-sm btn-info" title="Voir">
                                                    <svg class="icon">
                                                        <use xlink:href="{{ asset('vendors/@coreui/icons/svg/free.svg') }}#cil-magnifying-glass"></use>
                                                    </svg>
                                                </a>
                                                <a href="{{ path('app_concours_modifier', {id: c.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                                                    <svg class="icon">
                                                        <use xlink:href="{{ asset('vendors/@coreui/icons/svg/free.svg') }}#cil-pencil"></use>
                                                    </svg>
                                                </a>
                                                <form method="POST" action="{{ path('app_concours_supprimer', {id: c.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer le concours « {{ c.titre }} » ? Cette action est irréversible.');">
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                                        <svg class="icon">
                                                            <use xlink:href="{{ asset('vendors/@coreui/icons/svg/free.svg') }}#cil-trash"></use>
                                                        </svg>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-info">
                        <svg class="icon me-2">
                            <use xlink:href="{{ asset('vendors/@coreui/icons/svg/free.svg') }}#cil-info"></use>
                        </svg>
                        <strong>Aucun concours trouvé.</strong>
                        <p class="mb-0 mt-2">
                            <a href="{{ path('app_concours_creer') }}" class="alert-link">Créer le premier concours</a>
                            ou 
                            <a href="{{ path('app_concours_api_test') }}" target="_blank" class="alert-link">tester l'API automatiquement</a>
                        </p>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <strong>Tests API</strong>
            </div>
            <div class="card-body">
                <p>Pour tester automatiquement toutes les méthodes de l'entité Concours :</p>
                <a href="{{ path('app_concours_api_test') }}" target="_blank" class="btn btn-outline-primary">
                    <svg class="icon me-2">
                        <use xlink:href="{{ asset('vendors/@coreui/icons/svg/free.svg') }}#cil-code"></use>
                    </svg>
                    Tester l'API
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

