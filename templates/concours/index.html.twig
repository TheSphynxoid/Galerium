{% extends 'base.html.twig' %}

{% block title %}Concours index{% endblock %}

{% block body %}
    <h1>Concours index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>Statut</th>
                <th>Regles</th>
                <th>VotePublic</th>
                <th>DateDebutVote</th>
                <th>DateFinVote</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for concour in concours %}
            <tr>
                <td>{{ concour.id }}</td>
                <td>{{ concour.titre }}</td>
                <td>{{ concour.description }}</td>
                <td>{{ concour.dateDebut ? concour.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ concour.dateFin ? concour.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ concour.statut }}</td>
                <td>{{ concour.regles }}</td>
                <td>{{ concour.votePublic ? 'Yes' : 'No' }}</td>
                <td>{{ concour.dateDebutVote ? concour.dateDebutVote|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ concour.dateFinVote ? concour.dateFinVote|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_concours_show', {'id': concour.id}) }}">show</a>
                    <a href="{{ path('app_concours_edit', {'id': concour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_concours_new') }}">Create new</a>
{% endblock %}
